{
  "name": "ludum-40",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/webpack --config ./webpack.config.js",
    "build:prod": "NODE_ENV=production npm run build",
    "clean": "rimraf -- dist",
    "format": "./node_modules/.bin/prettier --config '.prettier' --write 'src/**/*.ts' 'e2e/**/*.ts' 'webpack.config.js'",
    "format:check": "./node_modules/.bin/prettier-check --config '.prettier' --list-different 'src/**/*.ts' 'e2e/**/*.ts' 'webpack.config.js'",
    "lint": "./node_modules/.bin/tslint ./**/*.ts -e './node_modules/**/*.ts'",
    "lint:fix": "./node_modules/.bin/tslint --fix ./**/*.ts -e './node_modules/**/*.ts'",
    "serve": "./node_modules/.bin/webpack-dev-server --watch --config ./webpack.config.js",
    "test": "./node_modules/.bin/jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irlbayarea/ludum-40.git"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "notify": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matanlurey/ludum-40/issues"
  },
  "homepage": "https://github.com/matanlurey/ludum-40",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.53",
    "awesome-typescript-loader": "^3.4.0",
    "clean-webpack-plugin": "^0.1.17",
    "concurrently": "^3.5.1",
    "expose-loader": "^0.7.4",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "path": "^0.12.7",
    "prettier": "^1.8.2",
    "prettier-check": "^2.0.0",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^21.2.3",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "dependencies": {
    "phaser": "^2.6.2"
  }
}
