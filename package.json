{
  "name": "ludum-40",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./configs/webpack/webpack.dev.js $f",
    "clean": "rimraf -- dist",
    "format": "prettier --config .prettier --write \"src/**/*.ts\" \"configs/*/**.js\"",
    "format:check": "prettier-check --config '.prettier' --list-different \"src/**/*.ts\" \"configs/*/**.js\"",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "serve": "webpack-dev-server --watch --config ./configs/webpack/webpack.dev.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irlbayarea/ludum-40.git"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "notify": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matanlurey/ludum-40/issues"
  },
  "homepage": "https://github.com/matanlurey/ludum-40",
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/jest": "^21.1.8",
    "@types/lodash": "^4.14.86",
    "@types/node": "^8.0.53",
    "@types/query-string": "^5.0.1",
    "app-root-path": "^2.0.1",
    "awesome-typescript-loader": "^3.4.0",
    "concurrently": "^3.5.1",
    "debug": "^3.1.0",
    "dungeon-factory": "^1.0.6",
    "easystarjs": "^0.4.1",
    "expose-loader": "^0.7.4",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "lodash": "^4.17.4",
    "path": "^0.12.7",
    "phaser-ce": "^2.9.2",
    "prettier": "^1.8.2",
    "prettier-check": "^2.0.0",
    "query-string": "^5.0.1",
    "rimraf": "^2.6.2",
    "serializer.ts": "0.0.12",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^21.2.3",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  }
}
